---
import "@fontsource/montserrat/variable.css";

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;

const effectiveTitle = title ? `mattrick.org - ${title}` : "mattrick.org";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{effectiveTitle}</title>

    <link rel="sitemap" href="/sitemap-index.xml" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#0c0a09" />
    <meta name="msapplication-TileColor" content="#00aba9" />
    <meta name="theme-color" content="#6ee7b7" />
  </head>
  <body>
    <div class="page">
      <Navbar />

      <div class="content">
        <slot />
      </div>

      <Footer />
    </div>
  </body>
</html>

<style>
  .page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .content {
    flex: 1;
  }
</style>

<style is:global>
  :root {
    --color-foreground: #ffffff;
    --color-background: #000000;

    --color-primary: #6ee7b7;
    --color-secondary: #fb7185;

    --font-sans: "MontserratVariable", sans-serif;
    --font-serif: serif;
    --font-mono: monospace;
  }

  ::selection {
    background: var(--color-primary);
    color: var(--color-background);
  }

  *,
  &::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    font-size: 112.5%; /* 18px */
  }

  body {
    margin: 0;
    color: var(--color-foreground);
    background-color: var(--color-background);
    font-family: var(--font-sans);
    font-weight: 500;
    line-height: 1.75;
  }

  p {
    margin-bottom: 1rem;
  }

  h1,
  h2,
  h3,
  h4,
  h5 {
    margin: 3rem 0 1.38rem;
    font-weight: 600;
    line-height: 1.3;
  }

  h1 {
    margin-top: 0;
    font-size: 3.052rem;
  }

  h2 {
    font-size: 2.441rem;
  }

  h3 {
    font-size: 1.953rem;
  }

  h4 {
    font-size: 1.563rem;
  }

  h5 {
    font-size: 1.25rem;
  }

  small,
  .text_small {
    font-size: 0.8rem;
  }

  a {
    color: var(--color-primary);
  }
</style>
